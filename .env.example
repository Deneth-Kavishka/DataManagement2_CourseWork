# Database Configuration
# Available database types: postgres, oracle, mongo, oracle_mongo
DB_TYPE=postgres

# PostgreSQL Connection (used if DB_TYPE=postgres)
DATABASE_URL=postgresql://username:password@localhost:5432/database

# Oracle Connection (used if DB_TYPE=oracle or DB_TYPE=oracle_mongo)
ORACLE_CONNECTION_STRING=username/password@localhost:1521/XE

# MongoDB Connection (used if DB_TYPE=mongo or DB_TYPE=oracle_mongo)
MONGODB_URI=mongodb://localhost:27017/urbanfood

# Email Service Configuration (required for verification emails)
EMAIL_SERVICE=gmail # or smtp
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password

# JWT Secret (for authentication tokens)
JWT_SECRET=your_jwt_secret_key